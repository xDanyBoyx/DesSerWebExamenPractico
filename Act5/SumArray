// Mostrar título
document.write("<h1>Suma de Elementos de un Arreglo</h1>");

let numeros = [];
let entrada;

// Bucle para pedir números
while (true) {
    entrada = prompt("Ingresa un número positivo (o escribe 'fin' para terminar):");

    // Salir si el usuario escribe "fin"
    if (entrada === null || entrada.toLowerCase() === "fin") {
        break;
    }

    // Convertir a número
    let numero = parseFloat(entrada);

    // Validar que sea positivo y un número válido
    if (!isNaN(numero) && numero > 0) {
        numeros.push(numero);
    } else {
        alert("Por favor, ingresa solo números positivos.");
    }
}

// Calcular la suma
let suma = 0;
for (let i = 0; i < numeros.length; i++) {
    suma += numeros[i];
}

// Mostrar resultados
document.write("Arreglo: " + numeros.join(", ") + "<br>");
document.write("Suma total: " + suma);
